    <div class="container mt-5 mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="images p-3">
                                <div class="text-center p-4" id="zoom-image"> <img id="main-image" src="/admin/images/{{product.image.[0].filename}}"
                                        width="250" /> </div>
                                        
                                <div class="thumbnail text-center"> <img onclick="change_image(this)"
                                        src="/admin/images/{{product.SubImage.[0].filename}}" width="70"> <img
                                        onclick="change_image(this)" src="/admin/images/{{product.SubImage.[1].filename}}" width="70">
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="product p-4">
                                <div class="d-flex  justify-content-between align-items-center">
                                    <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> <span
                                            class="ml-1">Back</span> </div> <i
                                        class="fa fa-shopping-cart text-muted"></i>
                                </div>
                                <div class="mt-4 mb-3"> <span class="text-uppercase text-muted brand">Orianz</span>
                                    <h5 class="text-uppercase">{{product.name}}</h5>
                                    <div class="price d-flex flex-row align-items-center"> <span    
                                            class="act-price">{{product.price}}</span>
                                        {{!-- <div class="ml-2"> <small class="dis-price">$59</small> <span>40% OFF</span>
